{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "checkJs": false,
    "allowJs": true
  },
  "include": ["src/*/"],
  "exclude": ["node_modules"]
}
